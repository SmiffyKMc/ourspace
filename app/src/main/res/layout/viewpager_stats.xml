<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="fragments.viewpager.StatsViewPagerFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:fontFamily="sans-serif-light"
        android:id="@+id/info"
        android:layout_margin="10dp"
        android:gravity="start"
        android:textSize="50sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Statistics" />
    <ScrollView
        android:layout_below="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:textSize="16sp"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:elegantTextHeight="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/stats_text"
                android:text="Text"/>
            <TextView
                android:fontFamily="sans-serif-light"
                android:id="@+id/comparison"
                android:layout_margin="10dp"
                android:textSize="40sp"
                android:layout_below="@+id/stats_text"
                android:text="@string/title_comparison"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:background="@drawable/comparison_mercury"
                android:layout_width="600dp"
                android:layout_height="250dp"
                android:id="@+id/comparison_image"
                android:layout_below="@+id/comparison"/>
        </RelativeLayout>


    </ScrollView>

</RelativeLayout>
